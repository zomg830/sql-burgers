<div id="head" class="ui three column page grid middle aligned">
    <div class="burger ui column">
        <img class="ui fluid image" src="/assets/img/burger.png">
    </div>
    <div class="header-text column">
        <h1 class="head-text ui center aligned header eight column"
            style="color: whitesmoke; text-shadow: -1px 0 #888888, 0 1px #888888, 1px 0 #888888, 0 -1px #888888;">
            Eat Da Burger!
        </h1>
    </div>
    <div class="burger ui column">
        <img class="ui fluid image" src="/assets/img/burger.png">
    </div>
</div>

<div id='avail'>
    <h2>Burgers Available to Eat:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<div id='devoured'>
    <h2>Burgers That Have <br>Been Devoured: </h2>

    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id="add">
    <form class="ui form" action="/" method="POST">
        <div class="field">
            <input type="text" id="dab" name="burger_name" placeholder="Add a burger!">
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>