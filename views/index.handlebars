<div id="head">
    <h1>Eat Da Burger!</h1>
</div>

<div id='avail'>
    <h2>Burgers Available to Eat:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<div id='devoured'>
    <h2>Burgers That Have <br>Been Devoured: </h2>

    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id="add">
    <form class="ui form" action="/" method="POST">
        <div class="field">
            <input type="text" id="dab" name="burger_name" placeholder="Add a burger!">
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>